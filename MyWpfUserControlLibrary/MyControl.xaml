<UserControl x:Class="MyWpfUserControlLibrary.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyWpfUserControlLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.667*"/>
            <RowDefinition Height="0.333*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="MyTextBox" Grid.Column="0" Grid.Row="0"></TextBox>
        <Button x:Name="MyButton" Grid.Column="0" Grid.Row="1" Click="MyButton_Click">Open Enterprise Architect Project</Button>
    </Grid>
</UserControl>
